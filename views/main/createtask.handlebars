    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<br>
<h3 class="text-task">Nova Tarefa: </h3>
<br>
<form action="/gerencia/task/addtask/successful" method="POST">
    <label for="title">Título: </label>
    <input type="text" id="title" name="title" placeholder="Adicione o título" class="form-control">
    <br>
    <label for="content">Conteúdo: </label>
    <textarea type="text" id="content" name="content" class="form-control" placeholder="Escreva a descrição da tarefa"></textarea>
    <br>
    <input type="hidden" id="creator" name="creator" value="{{user.name}}">
    <button type="submit" class="button-task">Criar tarefa</button>
</form>