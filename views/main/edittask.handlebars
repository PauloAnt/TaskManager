{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<br>
<h3 class="text-task">Editar Tarefa: </h3>
<br>
<form action="/gerencia/task/edit" method="POST">
    <label for="title">Título: </label>
    <input type="text" id="title" name="title" placeholder="Adicione o título" class="form-control" value="{{tarefa.title}}">
    <br>
    <input type="hidden" id="id" name="id" value="{{tarefa.id}}">
    <label for="content">Conteúdo: </label>
    <textarea type="text" id="content" name="content" class="form-control" placeholder="Escreva a descrição da tarefa">{{tarefa.content}}</textarea>
    <br>
    <a href='/task/edit'><button type="submit" class="button-task">Editar tarefa</button></a>
</form>